= form_with model: news_item, url: representative_my_news_item_fetch_articles_path(params[:representative_id]), method: :get, local: true do |f|
    - if news_item.errors.any?
        .alert.alert-danger
            %h2
                "#{pluralize(news_item.errors.count, 'error')} prohibited this news from being saved:"
            %ul
                - news_item.errors.full_messages.each do |message|
                    %li= message
    .form-group.row
        .col-sm-2
            = label_tag  :representative_id, 'Representative',  class: 'col-form-label'
        .col-sm-10
            = select_tag :representative_id, options_for_select(representatives_list, selected: params[:representative_id]), include_blank: true,
            class: 'form-control'

    .form-group.row
        .col-sm-2
            = label_tag :issue, 'Issue', class: 'col-form-label'
        .col-sm-10
            = select_tag :issue, options_for_select(issues_list, selected: params[:issue]), include_blank: true,
            class: 'form-control'
    .actions
        .col-sm-1.mx-auto
            = f.submit 'Search', class: 'btn btn-primary'
