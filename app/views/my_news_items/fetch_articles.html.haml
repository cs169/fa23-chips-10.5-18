= form_for NewsItem.new, url: representative_my_news_item_fetch_articles_path(params[:representative_id]), method: :post do |f|
  %h1.text-center Edit News Item
  %h5.text-center Representative: #{@representative.name}
  %h5.text-center Issue: #{@issue}
  - if @articles.present?
    - @articles.each do |article, index|
      .article
        %ul
          %li= article.title
          %li
            %a{ href: article.url, target: "_blank" }= article.url
          %li= article.description
        = f.radio_button :link, article.url, id: "article_#{index}_link"
        = f.label :link, "Select this article", for: "article_#{index}_link"
        = f.hidden_field :title, value: article.title, id: "article_#{index}_title"
        = f.hidden_field :description, value: article.description, id: "article_#{index}_description"
    .rating
      = f.label :rating, 'Rating'
      = f.select :rating, options_for_select(1..5), include_blank: true
  - else
    %p No articles found
  .col-sm-1.mx-auto
    = f.submit "Save", class: 'btn btn-primary'
